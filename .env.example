# ── MCP Server ──────────────────────────────────────────────
# Transport: 'stdio' spawns MCP server as subprocess (local dev)
#            'http' connects to a remote MCP server (production/Lambda)
MCP_TRANSPORT=stdio

# stdio mode — path + Jamf credentials passed to subprocess
MCP_SERVER_PATH=../jamf-mcp-server/dist/index-main.js
JAMF_URL=https://your-instance.jamfcloud.com
JAMF_CLIENT_ID=your-api-client-id
JAMF_CLIENT_SECRET=your-api-client-secret

# http mode — URL of running MCP server
# MCP_SERVER_URL=http://localhost:3001/mcp

# ── MCP Timeouts & Reconnection ─────────────────────────────
# MCP_CONNECT_TIMEOUT_MS=30000
# MCP_TOOL_TIMEOUT_MS=120000
# MCP_MAX_RECONNECT_ATTEMPTS=5
# MCP_RECONNECT_BASE_MS=1000

# ── AWS Secrets Manager (production) ───────────────────────
# Secret should be JSON with env var keys (e.g. JAMF_CLIENT_SECRET, SLACK_BOT_TOKEN)
# AWS_SECRET_NAME=jamf-mcp-agent/production

# ── AWS Bedrock ─────────────────────────────────────────────
# AWS credentials (optional — falls back to default credential chain)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
BEDROCK_MODEL=us.anthropic.claude-3-5-sonnet-20241022-v2:0
BEDROCK_MAX_TOOL_ROUNDS=15
# BEDROCK_REQUEST_TIMEOUT_MS=120000

# ── Slack ───────────────────────────────────────────────────
SLACK_BOT_TOKEN=xoxb-...
SLACK_CHANNEL_COMPLIANCE=C0123456789
SLACK_CHANNEL_SECURITY=C0123456789
SLACK_CHANNEL_FLEET=C0123456789
SLACK_ENABLED=false

# ── Scheduler ──────────────────────────────────────────────
SCHEDULER_ENABLED=false
SCHEDULER_TIMEZONE=America/New_York
CRON_COMPLIANCE=0 8 * * 1-5
CRON_SECURITY=0 9 * * 1-5
CRON_FLEET=0 10 * * 1
# JOB_TIMEOUT_MS=600000

# ── Health Server ─────────────────────────────────────────
# HTTP port for /health and /ready endpoints (daemon mode)
# HEALTH_PORT=8080
